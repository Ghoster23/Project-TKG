    case 3:
        show_debug_message(global.MonitorW);
        show_debug_message(global.MonitorH);

        surface_resize(application_surface, 2176, 832); //This will resize the application surface so that it fills the screen/window correctly. Only use this along with views.
        view_hview[0] = 1088; 
        view_wview[0] = 832;
        display_set_gui_size(1088, 832); //resize the gui to fit the new resolution so any draw GUI events will appear in the correct place.
        break;

    default:
        show_debug_message(global.MonitorW);
        show_debug_message(global.MonitorH);

        instance_destroy(); //destroy the instance for all other values of step_number
        break;
}

